{
  "name": "pixelperfect",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://pixelperfectgame.github.io",
  "dependencies": {
    "@craco/craco": "^3.2.3",
    "antd": "^3.11.2",
    "core-js": "^2.5.7",
    "craco-antd": "^1.9.3",
    "craco-preact": "^1.1.0",
    "html2canvas": "^1.0.0-alpha.12",
    "pixelmatch": "^4.0.2",
    "react": "^16.7.0",
    "react-ace": "^6.2.0",
    "react-app-polyfill": "^0.1.3",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.1"
  },
  "scripts": {
    "start": "nodemon -w ./src/style/AntDesign/customTheme.less -w craco.config.js --exec 'craco start'",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "precommit": "pretty-quick --staged"
